<div class="form">
  <%= form_for @image do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :caption %>
      <%= f.text_field :caption, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :photo %>
      <%= f.file_field :photo, class: "form-control" %>
    </div>
    <%= f.submit class: "btn btn-primary" %>
  <% end %>
</div>
