<% if @user %>
  <h1><%= @user.name %>'s Images</h1>
<% else %>
  <h1>Images</h1>
<% end %>
<hr>

<% if @images.any? %>
  <div class="images-list">
    <% @images.each do |image| %>
      <div class="image">
        <h4><%= link_to image.title, image_path(image) %></h4>
        <%= image_tag(image.photo.url(:thumb)) %>
      </div>
    <% end %>
  </div>
<% else %>
  <p>There are no images.</p>
<% end %>
<hr>
<% if !@user %>
  <%= link_to "Upload Image", new_image_path %>
<% end %>
